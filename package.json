{
  "name": "telegraf-template",
  "version": "1.0.0",
  "description": "Telegram bot template based on telegraf.js.org",
  "main": "dist/app.js",
  "repository": "https://github.com/backmeupplz/telegraf-template",
  "author": "backmeupplz <backmeupplz@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "npm run build-ts && node dist/app.js",
    "build": "npm run build-ts",
    "start": "node dist/app.js",
    "dev": "concurrently -k -i -p \"[{name}]\" -n \"Node,TypeScript\" -c \"yellow.bold,cyan.bold\" \"npm run watch-js\" \"npm run watch-ts\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js",
    "docker:up": "npm run build && docker-compose up -d --build --force-recreate",
    "docker:down": "docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  },
  "dependencies": {
    "@tinkoff/invest-openapi-js-sdk": "^1.2.16",
    "@typegoose/typegoose": "^7.3.0",
    "@types/dotenv": "^8.2.0",
    "@types/mongoose": "^5.7.32",
    "@types/node": "^14.0.23",
    "dotenv": "^8.2.0",
    "log4js": "^6.3.0",
    "mongoose": "^5.9.25",
    "telegraf": "^3.38.0",
    "telegraf-i18n": "^6.6.0",
    "typescript": "^4.0.3"
  }
}
